<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76a0e4">

    <EditText
        android:id="@+id/uNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pwdEditText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pwdEditText"
        android:layout_marginTop="214dp"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pwdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uNameEditText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/question_mark" />

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignStart="@+id/pwdEditText"
        android:layout_below="@+id/pwdEditText"
        android:background="#32bd2b"
        android:onClick="loginOnclick"
        android:text="Iniciar Sesión"
        android:textColor="#fbfbfb" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logInBtn"
        android:layout_alignStart="@+id/logInBtn"
        android:layout_below="@+id/logInBtn"
        android:background="#2759d5"
        android:onClick="registerOnclick"
        android:text="Registrarse"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/fPwdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/registerBtn"
        android:layout_alignStart="@+id/registerBtn"
        android:layout_below="@+id/registerBtn"
        android:background="#f60303"
        android:onClick="fPwdOnClick"
        android:text="He olvidado mi contraseña"
        android:textColor="#ffffff" />

</RelativeLayout>
