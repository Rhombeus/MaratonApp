<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76a0e4">

    <Button
        android:id="@+id/jugarBtn"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_above="@+id/buscarBtn"
        android:layout_alignParentStart="true"
        android:background="#0cc9de"
        android:onClick="jugarOnClick"
        android:text="Jugar"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/amigosBtn"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/jugarBtn"
        android:background="#0c67de"
        android:onClick="amigosOnClick"
        android:text="Amigos"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buscarBtn"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#0c67de"
        android:onClick="buscarOnClick"
        android:text="Buscar Amigos"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/hScoreBtn"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#0cc9de"
        android:onClick="hScoreOnClick"
        android:text="HiScore"
        android:textColor="#ffffff" />

</RelativeLayout>
